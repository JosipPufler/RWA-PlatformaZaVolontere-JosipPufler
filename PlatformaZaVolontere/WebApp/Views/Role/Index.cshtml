@model IEnumerable<WebApp.Models.ViewModels.RoleVM>

@{
    ViewData["Title"] = "Index";
}

<h1>List of roles</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="max-width: 125px; width: 150px;">

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="max-width: 100px; width: 100px;">
                            <div class="btn-group btn-group-sm">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Idrole }, new { @class = "btn btn-sm btn-outline-primary" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Idrole }, new { @class = "btn btn-sm btn-outline-danger" })
                            </div>
                        </td>
                        <td class="align-content-center ms-2">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4"></div>
</div>
